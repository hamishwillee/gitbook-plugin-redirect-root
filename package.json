{
    "name": "gitbook-plugin-redirect-to-lang",
    "description": "Creates a redirect in the root URL to the specified language root. This overwrites the default language selector",
    "main": "index.js",
    "version": "0.0.1",
    "engines": {
        "gitbook": ">=2.0.0"
    },
    "homepage": "https://github.com/hamishwillee/gitbook-plugin-redirect-to-lang",
    "repository": {
        "type": "git",
        "url": "https://github.com/hamishwillee/gitbook-plugin-redirect-to-lang.git"
    },
    "license": "BSD 3-clause New or Revised License ",
    "bugs": {
        "url": "https://github.com/hamishwillee/gitbook-plugin-redirect-to-lang"
    },
    
    "gitbook": {
        "properties": {
            "language": {
                "type": "string",
                "default": "en",
                "description": "The target language that will become the default/redirected root."
            }
        }
    }
    
}
